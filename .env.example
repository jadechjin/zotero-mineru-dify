# Zotero MCP 连接地址
ZOTERO_MCP_URL=http://127.0.0.1:23120/mcp

# MinerU API
MINERU_API_TOKEN=your_mineru_api_token_here

# Zotero Collection 选择（可选）
# 逗号分隔的 Collection key，留空则处理全库
# ZOTERO_COLLECTION_KEYS=3PEKRG3J,XEVC7LKY
# 是否递归包含子分类（默认 true）
# ZOTERO_COLLECTION_RECURSIVE=true
# Collection 内 item 分页大小
# ZOTERO_COLLECTION_PAGE_SIZE=50

# Dify API
DIFY_API_KEY=your_dify_dataset_api_key_here
DIFY_BASE_URL=https://api.dify.ai/v1

# Dify 知识库名称（自动查找或创建）
DIFY_DATASET_NAME=Zotero Literature

# # Dify 文档处理参数
# DIFY_PROCESS_MODE=custom
# DIFY_SEGMENT_SEPARATOR=\n\n
# DIFY_SEGMENT_MAX_TOKENS=800
# DIFY_REMOVE_EXTRA_SPACES=true
# DIFY_REMOVE_URLS_EMAILS=false
# # 单个文档索引等待上限（秒）；大文档可调高避免误判超时失败
# DIFY_INDEX_MAX_WAIT=1800
# # 留空时自动跟随知识库 doc_form；需要强制时再填写 text_model/hierarchical_model
# DIFY_DOC_FORM=
# DIFY_DOC_LANGUAGE=

# Markdown Cleaning — MinerU 输出清洗配置
# 总开关（false 则完全跳过清洗）
MD_CLEAN_ENABLED=true
# 压缩 3+ 连续空行为 2 个
MD_CLEAN_COLLAPSE_BLANK_LINES=true
# 移除残留 HTML 标签（<br>, <div> 等）
MD_CLEAN_STRIP_HTML=true
# 清除不可见控制字符
MD_CLEAN_REMOVE_CONTROL_CHARS=true
# 移除 Markdown 图片占位符 ![](...)
MD_CLEAN_REMOVE_IMAGE_PLACEHOLDERS=true
# 移除独立行的页码数字（激进规则，默认关闭）
MD_CLEAN_REMOVE_PAGE_NUMBERS=false
# 移除水印文本（需配置模式）
MD_CLEAN_REMOVE_WATERMARK=false
# 水印正则模式，逗号分隔（如 "Generated by.*,Confidential"）
MD_CLEAN_WATERMARK_PATTERNS=
